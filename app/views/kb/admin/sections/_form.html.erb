<%= semantic_form_for resource, :url => (resource.persisted? ? resource_path(resource) : collection_url), :remote => true, :html => { :multipart => true } do |f| %>
  <%= error_messages_for resource %>

  <%= f.inputs :name => "Basic" do %>
    <%= f.input :title %>
    <%= f.input :desc, :input_html => {:size => '50x2'} %>
    <%= f.input :parent_id, :as => :select, :collection => ancestry_options(Kb::Section.roots.arrange, :title) %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
